<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shodnyak.Page.Authorizathion">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Image Source="ShodnyakLogo.png" Margin="50, 0, 50, 0"/>
            <StackLayout>
                <Label Margin="50, 0, 50, 5" Text="Login" TextColor="#703030"/>
                <Frame CornerRadius="8"  BackgroundColor="#c4c4c4" Margin="50, 0, 50, 5" Padding="0">
                    <Entry x:Name="LoginInput"/>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Label Margin="50, 10, 50, 5" Text="Password" TextColor="#703030"/>
                <Frame CornerRadius="8" BackgroundColor="#c4c4c4" Margin="50, 0, 50, 5"  Padding="0">
                    <Entry x:Name="PasswordInput"  IsPassword="True"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="15" Orientation="Horizontal" HorizontalOptions="Center">
                <Button CornerRadius="8" Margin="0, 10, 50, 0" Text="Let's go!" TextColor="#703030"/>
                <Button CornerRadius="8" Margin="0, 10, 0, 0"  Text="Registration" TextColor="#703030"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>